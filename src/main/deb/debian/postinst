#!/bin/sh
# postinst script for openmentor
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# . /usr/share/dbconfig-common/dpkg/postinst 
# dbc_generate_include='template:/etc/openmentor/openmentor.xml'
# dbc_generate_include_perms="755"
# dbc_generate_include_owner="root:root"
# dbc_generate_include_args="-o template_infile=/etc/openmentor/openmentor.xml.template -U"
# dbc_go tracker-webapp $@

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    
        ## When reconfiguring, none of the changes should matter. We handle this by
        ## grepping to see if we need to, for each value in turn. Only if the target
        ## exists do we need to get a value and sed it into the file. This makes
        ## updates much safer. 
        
        CONFIG=/etc/openmentor/openmentor.xml

        if grep _DBC_DBSERVER_ $CONFIG > /dev/null 2>&1 ; then
            RET=""
            db_get openmentor/database_host
            DB_HOST=$RET
            DB_HOST=$(echo "$DB_HOST" | perl -MHTML::Entities -ne 'print encode_entities($_)')
            sed -i "s/_DBC_DBSERVER_/$DB_HOST/" $CONFIG
        fi

        if grep _DBC_DBPORT_ $CONFIG > /dev/null 2>&1 ; then
            RET=""
            db_get openmentor/database_port
            DB_PORT=$RET
            DB_PORT=$(echo "$DB_PORT" | perl -MHTML::Entities -ne 'print encode_entities($_)')
            sed -i "s/_DBC_DBPORT_/$DB_PORT/" $CONFIG
        fi
        
        if grep _DBC_DBNAME_ $CONFIG > /dev/null 2>&1 ; then
            RET=""
            db_get openmentor/database_name
            DB_NAME=$RET
            DB_NAME=$(echo "$DB_NAME" | perl -MHTML::Entities -ne 'print encode_entities($_)')
            sed -i "s/_DBC_DBNAME_/$DB_NAME/" $CONFIG
        fi

        if grep _DBC_DBUSER_ $CONFIG > /dev/null 2>&1 ; then
            RET=""
            db_get openmentor/database_username
            DB_USER=$RET
            DB_USER=$(echo "$DB_USER" | perl -MHTML::Entities -ne 'print encode_entities($_)')
            sed -i "s/_DBC_DBUSER_/$DB_USER/" $CONFIG
        fi

        if grep _DBC_DBPASS_ $CONFIG > /dev/null 2>&1 ; then
            RET=""
            db_get openmentor/database_password
            DB_PASSWORD=$RET
            DB_PASSWORD=$(echo "$DB_PASSWORD" | perl -MHTML::Entities -ne 'print encode_entities($_)')
            sed -i "s/_DBC_DBPASS_/$DB_PASSWORD/" $CONFIG
        fi

        # Create tracker user if it doesn't exist.
        if ! id trackerapp > /dev/null 2>&1 ; then
            adduser --system --home /usr/share/openmentor --no-create-home \
                 --disabled-password trackerapp
        fi
        
        if [ ! -d /usr/share/openmentor/lib ]; then
        	mkdir -p /usr/share/openmentor/lib
        fi
        if [ ! -d /usr/share/openmentor/conf ]; then
        	mkdir -p /usr/share/openmentor/conf
        fi
        
        ## Follow symbolic links for permissions, in case we're directed to a protected location
        chown -RH openmentor:adm /usr/share/openmentor /var/log/openmentor /etc/openmentor
        chmod -R 750      /usr/share/openmentor /var/log/openmentor /etc/openmentor
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
